<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="act_wait_validation" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale" />
            <field name="name">WaitValidated</field>
            <field name="split_mode">OR</field>
            <field name="kind">dummy</field>
        </record>
        <record id="sale.trans_draft_router" model="workflow.transition">
            <field name="act_from" ref="sale.act_draft" />
            <field name="act_to" ref="act_wait_validation" />
        </record>
        <record id="sale.trans_sent_router" model="workflow.transition">
            <field name="act_from" ref="sale.act_sent" />
            <field name="act_to" ref="act_wait_validation" />
        </record>
        <record id="act_validation" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale" />
            <field name="name">validated</field>
            <field name="split_mode">OR</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'validated'})</field>
        </record>
        <record id="trans_wait_validation_validation" model="workflow.transition">
            <field name="act_from" ref="act_wait_validation" />
            <field name="act_to" ref="act_validation" />
            <field name="condition">amount_total &gt;= 50000 </field>
            <field name="signal">director_approve</field>
            <field name="group_id" ref="purchase_advanced_validation.group_director_nontechnical" />
        </record>
        <record id="trans_wait_validation_router" model="workflow.transition">
            <field name="act_from" ref="act_wait_validation" />
            <field name="act_to" ref="sale.act_router" />
            <field name="condition">amount_total &lt; 50000 </field>
            <field name="signal">director_approve</field>
            <field name="group_id" ref="purchase_advanced_validation.group_director_nontechnical" />
        </record>
        <record id="trans_validation_router" model="workflow.transition">
            <field name="act_from" ref="act_validation" />
            <field name="act_to" ref="sale.act_router" />
            <field name="signal">boss_approve</field>
            <field name="group_id" ref="purchase_advanced_validation.group_boss" />
        </record>
    </data>
</openerp>
