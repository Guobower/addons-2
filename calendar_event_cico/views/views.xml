<openerp>
    <data>

        <record id="view_attendance_tree_event_cico" model="ir.ui.view">
            <field name="name">hr.attendance.tree</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='action_desc']" position="after">
                    <field name="latitude" readonly="1"/>
                    <field name="longitude" readonly="1"/>
                    <field name="calendar_event_id" readonly="1"/>
                </xpath>
            </field>
        </record>


        <record id="view_attendance_form_event_cico" model="ir.ui.view">
            <field name="name">hr.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='action_desc']" position="after">
                    <field name="latitude" readonly="1"/>
                    <field name="longitude" readonly="1"/>
                    <field name="calendar_event_id" readonly="1"/>
                </xpath>
            </field>
        </record>


