<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="expenses_order_tree_view" model="ir.ui.view">
            <field name="name">expense.order.tree.view</field>
            <field name="model">expense.order</field>
            <field name="priority">1</field>
            <field name="view_mode">tree,form</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">            
                <tree string="报销" decoration-warning="state=='draft'" decoration-bf="message_unread == True">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="total_amount" sum="Total Amount" widget="monetary"/>
                    <field name="state"/>
                    <field name="message_unread" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="expense_order_form_view" model="ir.ui.view">
            <field name="name">expense.order.form</field>
            <field name="model">expense.order</field>
            <field eval="25" name="priority"/>
            <field name="arch" type="xml">
                <form string="报销">
                <header>
                    <button name="submit_expenses" states="draft" string="提交" type="object" class="oe_highlight"/>
                    <button name="approve_expenses" states="submit" string="批准" type="object" groups="base.group_hr_user" class="oe_highlight"/>
                    <button name="reset_expenses" states="cancel" string="修改成草稿" type="object"/>
                    <button name="action_move_create" states="approve" string="添加分录" type="object" groups="account.group_account_user" class="oe_highlight"/>
                    <button name="action_check" states="post" string="检查支付" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve,post,done" statusbar_colors='{"submit":"blue","cancel":"red"}'/>
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_get_attachment_view"
                            class="oe_stat_button"
                            icon="fa-book"
                            type="object">
                            <field name="attachment_number" widget="statinfo" string="Documents"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Business lunch with X"/>
                        </h1>
                    </div>
                    <group>
                            
                            <field name="analytic_account_id"/>
                            <field name="date"/>
                            <field name="employee_id"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                            <field name="department_id" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="journal_id" domain="[('type', '=', 'purchase')]" groups="account.group_account_user"
                                options="{'no_open': True, 'no_create': True}"/>
                            
                            <label for="payment_mode"/>
                            <div>
                                <field name="payment_mode" widget="radio"/>
                                <field name="bank_journal_id"
                                    attrs="{'invisible': [('payment_mode', '=', 'own_account')], 'required': [('payment_mode', '=', 'company_account')]}" domain="[('type', 'in', ['cash', 'bank'])]"
                                    widget="selection"/>
                            </div>

                    </group>
                    <notebook>
                        <page string="产品">
                            <field name="expense_line">
                                <tree string="报销明细" editable="bottom">
                                    <field name="product_id" context="{'default_can_be_expensed': 1}"/>
                                    <field name="unit_amount" required="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="quantity" class="oe_inline"/>
                                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting" string="会计科目"/>
                                    <field name="product_uom_id" widget="selection" class="oe_inline" groups="product.group_uom"/>
                                    <field name="tax_ids" widget="many2many_tags" groups="account.group_account_user"/>
                                    <field name="total_amount" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="untaxed_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="tax_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="amount_total"/>
                                </div>
                                <field name="total_amount" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <field name="description" class="oe_inline" placeholder="The notes for this expense order."/>
                            <div class="oe_clear"/>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>



        <record model="ir.actions.act_window" id="action_expense_order">
            <field name="name">报销</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">expense.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="expenses_order_tree_view"/>
        </record>

        <menuitem id="menu_expense_order" name="费用单" parent="hr_expense.menu_hr_expense_root" action="action_expense_order" sequence="1"/>

    </data>
</openerp>