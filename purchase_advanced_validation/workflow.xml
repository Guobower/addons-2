<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="act_advance_check" model="workflow.activity">
            <field name="wkf_id" ref="purchase.purchase_order" />
            <field name="name">CheckForApprovalAdvance</field>
            <field name="split_mode">OR</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'validated'})</field>
        </record>
        <record id="purchase_double_validation.trans_confirmed_double_lt" model="workflow.transition">
            <field name="condition">amount_total &lt; 3000</field>
        </record>
        <record id="purchase_double_validation.trans_confirmed_double_gt" model="workflow.transition">
            <field name="condition">amount_total &gt;= 3000 and amount_total &lt; 10000 and not technical</field>
            <field name="group_id" ref="purchase_advanced_validation.group_director_nontechnical" />
        </record>
        <record id="trans_confirmed_double_lt_dirctor_technical" model="workflow.transition">
            <field name="act_from" ref="purchase_double_validation.act_double_check" />
            <field name="act_to" ref="purchase_double_validation.act_double_wait" />
            <field name="signal">purchase_approve_technical</field>
            <field name="condition">amount_total &gt;= 3000 and amount_total &lt; 10000 and technical</field>
            <field name="group_id" ref="purchase_advanced_validation.group_director_technical" />
        </record>
        <record id="trans_confirmed_double_gt_dirctor_nontechnical" model="workflow.transition">
            <field name="act_from" ref="purchase_double_validation.act_double_check" />
            <field name="act_to" ref="purchase_advanced_validation.act_advance_check" />
            <field name="signal">purchase_approve</field>
            <field name="condition">amount_total &gt;= 10000 and not technical</field>
            <field name="group_id" ref="purchase_advanced_validation.group_director_nontechnical" />
        </record>
        <record id="trans_confirmed_double_gt_dirctor_technical" model="workflow.transition">
            <field name="act_from" ref="purchase_double_validation.act_double_check" />
            <field name="act_to" ref="purchase_advanced_validation.act_advance_check" />
            <field name="signal">purchase_approve_technical</field>
            <field name="condition">amount_total &gt;= 10000 and technical</field>
            <field name="group_id" ref="purchase_advanced_validation.group_director_technical" />
        </record>
        <record id="trans_confirmed_double_gt_boss" model="workflow.transition">
            <field name="act_from" ref="purchase_advanced_validation.act_advance_check" />
            <field name="act_to" ref="purchase_double_validation.act_double_wait" />
            <field name="signal">boss_approve</field>
            <field name="group_id" ref="purchase_advanced_validation.group_boss" />
        </record>
    </data>
</openerp>
