<openerp>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="procurement_request.list">
            <field name="name">Request Order list</field>
            <field name="model">request.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="date_order" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="procurement_request.form">
            <field name="name">Request Order form</field>
            <field name="model">request.order</field>
            <field name="arch" type="xml">
                <form string="Request Order">
                    <header>
                        <button name="action_confirm" type='object' states="draft" class="btn-primary" string="Confirm"/>
                        <button name="action_approve" type='object' states="confirmed" string="Approve" groups="base.group_hr_user" />
                        <button name="action_done" type='object' states="approved" string="Done" />
                        <button name="action_draft" type='object' states="action_cancel" string="Set to Draft"  />
                        <button name="action_cancel" type='object'  states="draft" string="Cancel" />
                        <field name="state" widget="statusbar"  statusbar_visible="draft,confirmed,approved,done" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <field name="picking_ids" invisible="1" />
                            <button type="object" name="action_view_delivery" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="base.group_user">
                                <field name="delivery_count" widget="statinfo" string="Delivery" />
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Describe the item..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="note" />
                                <field name="employee_id" />
                                <field name="department_id" />
                                <field name="partner_id" />
                                <field name="date_order" />
                                <field name="warehouse_id" />
                            </group>
                            <group></group>
                        </group>
                        <notebook>
                            <page string="明细">
                                <field name="order_line">
                                    <tree string="Order Lines">
                                        <field name="product_id" />
                                        <field name="product_uom_qty" />
                                        <field name="product_uom" />
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="product_id" />
                                                <field name="product_uom_qty" />
                                                <field name="product_uom" />
                                                <field name="name" />
                                            </group>
                                            <group></group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="procurement_request.action_window">
            <field name="name">Request Order</field>
            <field name="res_model">request.order</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- server action to the one above -->
        <!--
        <record model="ir.actions.server" id="procurement_request.action_server">
          <field name="name">procurement_request server</field>
          <field name="model_id" ref="model_procurement_request_procurement_request"/>
          <field name="code">
            action = {
              "type": "ir.actions.act_window",
              "view_mode": "tree,form",
              "res_model": self._name,
            }
          </field>
        </record>
        -->
        <!-- Top menu item -->
        <menuitem name="Request Order" id="procurement_request.menu_root" />
        <!-- menu categories -->
        <menuitem name="Request Order" id="procurement_request.menu_1" parent="procurement_request.menu_root" />
        <!-- actions -->
        <menuitem name="Request Order" id="procurement_request.menu_1_list" parent="procurement_request.menu_1" action="procurement_request.action_window" />
    </data>
</openerp>
